generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

enum BloodGroup {
  A_POS
  A_NEG
  B_POS
  B_NEG
  O_POS
  O_NEG
  AB_POS
  AB_NEG
}

enum Gender {
  MALE
  FEMALE
}

model User {
  id                  String      @id @default(uuid())
  name                String      @db.VarChar(50)
  email               String      @unique @db.VarChar(100)
  password            String
  photoURL            String?
  role                Role        @default(USER)
  mobileNumber        String?     @unique @db.VarChar(20)
  zilla               String?     @db.VarChar(50)
  district            String?     @db.VarChar(50)
  zipCode             String?     @db.VarChar(10)
  bloodGroup          BloodGroup?
  lastBloodDonateDate DateTime?
  resetOtp            Int?
  resetOtpExpires     DateTime?
  gender              Gender?     // optional enum
  whatsapp            Boolean?    // optional
  imo                 Boolean?    // optional
  createdAt           DateTime    @default(now())
  lastSignInAt        DateTime?

  @@index([bloodGroup])
  @@index([district])
}
