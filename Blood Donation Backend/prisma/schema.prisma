generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

enum BloodGroup {
  A_POS
  A_NEG
  B_POS
  B_NEG
  O_POS
  O_NEG
  AB_POS
  AB_NEG
}

enum Gender {
  MALE
  FEMALE
}

enum Division {
  Dhaka
  Chattagram
  Rajshahi
  Khulna
  Barishal
  Sylhet
  Rangpur
  Mymensingh
}

enum District {
  // Dhaka Division
  Dhaka
  Faridpur
  Gazipur
  Gopalganj
  Kishoreganj
  Madaripur
  Manikganj
  Munshiganj
  Narayanganj
  Narsingdi
  Tangail
  Shariatpur

  // Chattogram Division
  Bandarban
  Brahmanbaria
  Chandpur
  Chattagram
  CoxsBazar
  Cumilla
  Khagrachhari
  Lakshmipur
  Noakhali
  Rangamati

  // Rajshahi Division
  Bogura
  Chapainawabganj
  Joypurhat
  Naogaon
  Natore
  Pabna
  Rajshahi
  Sirajganj

  // Khulna Division
  Bagerhat
  Chuadanga
  Jashore
  Jhenaidah
  Khulna
  Kushtia
  Magura
  Meherpur
  Narail
  Satkhira

  // Barishal Division
  Barguna
  Barishal
  Bhola
  Jhalokathi
  Patuakhali
  Pirojpur

  // Sylhet Division
  Habiganj
  Moulvibazar
  Sunamganj
  Sylhet

  // Rangpur Division
  Dinajpur
  Gaibandha
  Kurigram
  Lalmonirhat
  Nilphamari
  Panchagarh
  Rangpur
  Thakurgaon

  // Mymensingh Division
  Jamalpur
  Mymensingh
  Netrokona
  Sherpur
}

model User {
  id                  String      @id @default(uuid())
  name                String      @db.VarChar(50)
  email               String      @unique @db.VarChar(100)
  password            String
  photoURL            String?
  role                Role        @default(USER)
  mobileNumber        String?     @unique @db.VarChar(20)
  division            Division?   // optional division
  district            District?   // optional district (formerly zilla)
  zipCode             String?     @db.VarChar(10)
  address             String?     // optional full address
  bloodGroup          BloodGroup?
  lastBloodDonateDate DateTime?
  resetOtp            Int?
  resetOtpExpires     DateTime?
  gender              Gender?     // optional enum
  whatsapp            Boolean?    // optional
  imo                 Boolean?    // optional
  createdAt           DateTime    @default(now())
  lastSignInAt        DateTime?

  @@index([bloodGroup])
  @@index([district])
}
